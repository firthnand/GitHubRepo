<div id="values" class="section panel panel-primary" data-bind="if: model.displayMode()=='values'">
    <div class="panel-heading">Показания счетчиков</div>
    <div class="panel-body">
        <table class="table table-striped table-condensed">
            <thead>
                <tr><th>Номер счетчика</th><th>Дата</th><th>Значение</th></tr>
            </thead>
            <tbody data-bind="foreach: model.values">
                <tr>
                    <td data-bind="safeText : function() {return WaterMeter.WMNumber}"></td>
                    <td data-bind="text: ValueDate"></td>
                    <td data-bind="text: Value"></td>
                </tr>
            </tbody>
        </table>
        <button class="btn btn-primary" data-bind="click: handleAddValueClick">
            Добавить показание
        </button>
        <button class="btn btn-primary" data-bind="click: handleSummaryClick">
            К списку домов
        </button>
    </div>
</div>
